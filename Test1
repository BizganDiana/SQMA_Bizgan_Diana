import java.util.Scanner;

public class Main {
  public static void main(String[] args) 
  {
    int n, i, p = 0;
    Scanner sc = new Scanner(System.in);
    
    System.out.print("Enter a number:");
    n = sc.nextInt();  
    
    for(i = 1; i <= n; i++)
    {
      if(i % 2 == 0)
      {
        p = p + i; 
      }
    }
    System.out.println("The sum of even numbers from 1 to "+n+"  =  "+p);
  }
}
